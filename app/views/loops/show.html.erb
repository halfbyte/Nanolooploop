<h2>
  <%=h @loop.name %>
  by <%= link_to_user @loop.user %>
</h2>
<p>
  <b>nanoloop://</b>
  <%=link_to "data", @loop.data.to_s %>
</p>
<p>
  <b>Download:</b>
  <%=link_to "file", loop_download_path(@loop, File.basename(@loop.name, ".nan"),  :format => 'nan') %>
</p>

<%= link_to 'Edit', edit_loop_path(@loop) if @loop.user == current_user %>
